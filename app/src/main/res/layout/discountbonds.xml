<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="#fff"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_discount_back"
                    android:layout_width="10dp"
                    android:layout_height="20dp"
                    android:layout_margin="10dp"
                    android:background="@drawable/icon_back_red"
                    android:padding="10dp"
                    android:scaleType="centerInside" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="优惠券"
                    android:textColor="#000"
                    android:textSize="18sp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:background="#DDD">
                <RelativeLayout
                    android:layout_marginTop="1dp"
                    android:id="@+id/ll_discount_sector1"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="#f00"
                    >
                    <TextView
                        android:id="@+id/tv_discount_sector1"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textSize="18sp"
                        android:text="可使用"
                        android:textColor="#f00"
                        android:background="#fff"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="1dp"
                    android:id="@+id/ll_discount_sector2"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"

                    >
                    <TextView
                        android:id="@+id/tv_discount_sector2"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textSize="18sp"
                        android:text="已使用"
                        android:background="#fff"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_marginTop="1dp"
                    android:id="@+id/ll_discount_sector3"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:id="@+id/tv_discount_sector3"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:textSize="18sp"
                        android:background="#fff"
                        android:text="已过期"
                       />
                </RelativeLayout>
            </LinearLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/vp_discount"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>


        </LinearLayout>

        <ImageView
            android:scaleType="fitCenter"
            android:id="@+id/meiyoujilu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/wdly_icon_2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/meiyoujilu"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:text="您还没有可使用的优惠券哦"
            android:textSize="18sp" />

    </RelativeLayout>

</LinearLayout>