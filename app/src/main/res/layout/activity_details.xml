<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.secondproject.leying.DetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        >
        <ImageView
            android:id="@+id/imageView_back_detailsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back_red"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="耀莱成龙影城五棵松店"
            android:textSize="18sp"
            android:textColor="#ff000000"
            android:layout_marginLeft="50dp"
            />

        <ImageView
            android:id="@+id/imageView_xiangqing_detailsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiangqing_icon_like"
            android:layout_marginLeft="50dp"
            />

        <ImageView
            android:id="@+id/imageView_changci_detailsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/changci_icon_cinema_details"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <Gallery
                android:id="@+id/gallery_detailsActivity"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#BCBCBC"
                ></Gallery>

                <LinearLayout
                    android:id="@+id/linear_detailsActivity"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_below="@+id/gallery_detailsActivity"
                    android:background="#ffffff"
                    android:alpha="1.0"
                    >
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        >
                        <TextView
                            android:id="@+id/text1_detailsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="百鸟朝凤"
                            android:textSize="15sp"
                            android:textColor="#000000"
                            />
                        <ImageView
                            android:id="@+id/imageView_middle_detialsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/xiangqing_icon_like"
                            android:layout_marginLeft="5dp"
                            />
                        <TextView
                            android:id="@+id/text2_detailsActivity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:text="7.8"
                            android:textSize="15sp"
                            android:textColor="#ff0000"

                            />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/text3_detailsActivity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="中国第五代导演教父的遗作"
                        android:layout_marginTop="5dp"
                        />
                </LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/shezhi_liuyan_liaotiankuang9"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="94dp"
                />

            <android.support.v4.view.ViewPager
                android:id="@+id/viewPager_detialsActivity"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_below="@+id/linear_detailsActivity"
                >
                <android.support.v4.view.PagerTabStrip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></android.support.v4.view.PagerTabStrip>
            </android.support.v4.view.ViewPager>
        </RelativeLayout>


    </ScrollView>
</LinearLayout>
