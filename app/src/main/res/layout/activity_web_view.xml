<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.secondproject.leying.WebViewActivity">



    <com.secondproject.myview.MyWebView
        android:id="@+id/webView_webViewActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></com.secondproject.myview.MyWebView>
    <LinearLayout
        android:id="@+id/linear2_webViewActivity"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#ffffff"
        android:clickable="true"
        >
        <ImageView
            android:id="@+id/imageView_back_detailsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_back_red"
            android:layout_marginLeft="10dp"
            android:clickable="true"
            />
        <TextView
            android:id="@+id/text_webViewActivity"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="耀莱成龙影城五棵松店"
            android:textSize="18sp"
            android:textColor="#ff000000"
            android:layout_marginLeft="50dp"
            android:singleLine="true"
            android:ellipsize="end"
            />

        <ImageView
            android:id="@+id/imageView_xiangqing_detailsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/xiangqing_icon_like"
            android:layout_marginLeft="50dp"
            />

        <ImageView
            android:id="@+id/imageView_changci_detailsActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/changci_icon_cinema_details"
            android:layout_marginLeft="20dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_webViewActivity"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#ffffffff"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:visibility="gone"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="没有更多了"
            android:gravity="center"
            />
    </LinearLayout>

</RelativeLayout>
