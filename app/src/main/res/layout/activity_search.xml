<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.secondproject.leying.SearchActivity">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/border3"
        >

        <FrameLayout
            android:layout_width="310dp"
            android:layout_height="wrap_content"
            >

            <EditText
                android:id="@+id/editText_search"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@drawable/border2"
                android:drawableLeft="@mipmap/chengshi_search_icon"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:hint="找影院"
                android:paddingLeft="10dp"
                />
            <ImageView
                android:id="@+id/imageView_searchActivity"
                android:clickable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/emotionstore_progresscancelbtn"
                android:layout_marginLeft="280dp"
                android:layout_marginTop="8dp"
                />
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:textColor="#CE2B2B"
            android:textSize="18sp"
            android:onClick="viewClick"
            android:layout_marginLeft="5dp"
            />
    </LinearLayout>

    <ListView
        android:id="@+id/listView_searchActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
</LinearLayout>
